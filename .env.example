# Environment Configuration for Shark Quant Trader
# Copy this file to .env and fill in your values

# ===========================================
# API Keys - Data Sources
# ===========================================

# Polygon.io - Primary data source for US equities/ETFs
# Get your API key at: https://polygon.io
POLYGON_API_KEY=your_polygon_api_key_here

# Binance - Public API for BTC data (no key required)
# Futures API endpoint for market data
BINANCE_FAPI_BASE=https://fapi.binance.com

# ===========================================
# Trading Configuration
# ===========================================

# Initial capital for backtesting and trading
INITIAL_CAPITAL=100000

# Trading mode: paper or live
TRADING_MODE=paper

# ===========================================
# Alert Channels (Optional)
# ===========================================

# Slack webhook URL for alerts
# Get it from: https://api.slack.com/messaging/webhooks
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx/xxx/xxx

# Email alerts via SMTP
# Format: mailtos://user:password@smtp.example.com?to=recipient@example.com
ALERT_SMTP_URL=

# Telegram alerts
# Get bot token from @BotFather and chat ID from @userinfobot
ALERT_TELEGRAM_TOKEN=
ALERT_TELEGRAM_CHAT_ID=

# Discord webhook
ALERT_DISCORD_WEBHOOK=

# ===========================================
# Logging Configuration
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# Database Configuration
# ===========================================

# SQLite database path (relative to project root)
DATABASE_PATH=data/state.db

# Cache database path
CACHE_PATH=data/cache/price_cache.db

# ===========================================
# Broker Integration (Phase 6 - Live Trading)
# ===========================================

# Alpaca - US Stock/ETF broker
# Sign up at: https://alpaca.markets
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true  # true for paper trading, false for live

# Interactive Brokers (optional - requires TWS or IB Gateway)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# Binance API (for crypto trading - optional)
# Get your keys at: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_API_SECRET=
BINANCE_TESTNET=true  # true for testnet, false for live